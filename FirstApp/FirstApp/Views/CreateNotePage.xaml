<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.Views.CreateNotePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="20">
                <Editor Placeholder="Note text" Text="{Binding Text}" HeightRequest="100"></Editor>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Save" Clicked="SaveButton_Clicked">
                    </Button>
                    <Button Text="Delete" Clicked="DeleteButton_Clicked">
                    </Button>
                </StackLayout>
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>